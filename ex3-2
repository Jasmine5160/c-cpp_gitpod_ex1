#include <iostream>
using namespace std;

int main()
{
    int x,y;
    printf("please input x: \n");
    scanf("%d",&x);
    
    printf("please input y: \n");
    scanf("%d",&y);
    /*
    
    ++x 會多加一個數
    x-- 不變
    --x 會減一個數
    x++ 不變
    
    x = 16
    x >> 1  為0
    x >> 2  x/2 為0
    x << 1  x*4
    x << 3  x*4*4
    */
    
    printf(" %d + %d = %d \n ",x,y,x+y);
    
    printf(" %d + %d = %d \n ",x++,y,x+y);
    
     printf(" %d + %d = %d \n ",x = 16 ,y,x = 16 +y);
    
    printf(" %d + %d = %d \n ",x << 1 ,y,x << 1 +y);
    
    printf(" %d + %d = %d \n ",x >> 1 ,y,x >> 1 +y);
    
    printf(" %d + %d = %d \n ",x >>2  ,y,x >> 2+y);
    
    printf(" %d + %d = %d \n ",x <<3  ,y,x << 3+y);
    
    cout<<"Hello World";
    
    return 0;
}
